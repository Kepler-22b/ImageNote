{% extends 'AppBundle::index.html.twig' %}
{% form_theme form 'AppBundle::forms/input.html.twig' %}

{% block title %}
    {{ parent() }} / Edit post
{% endblock %}

{% block heading %}
    Edit post <q class="c-text--quiet">{{ post.title }}</q>
{% endblock %}

{% block content %}
    {{ form_start(form, {attr: {"novalidate": "novalidate"}}) }}
    {{ form_errors(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description, {attr: {rows: '12', cols: '60'}}) }}
    {{ form_widget(form.submit, { "attr": {"class": "c-button c-button--success"}}) }}
    {{ form_end(form) }}
{% endblock %}